# MCP A2A Trading System - Environment Configuration
# Copy this file to .env and customize the values for your environment

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================

# Portfolio Manager Agent
PORTFOLIO_MANAGER_HOST=localhost
PORTFOLIO_MANAGER_PORT=8000

# Agent Services
FUNDAMENTAL_ANALYST_HOST=localhost
FUNDAMENTAL_ANALYST_PORT=8001

TECHNICAL_ANALYST_HOST=localhost
TECHNICAL_ANALYST_PORT=8002

RISK_MANAGER_HOST=localhost
RISK_MANAGER_PORT=8003

TRADE_EXECUTOR_HOST=localhost
TRADE_EXECUTOR_PORT=8004

# MCP Servers
MARKET_DATA_MCP_HOST=localhost
MARKET_DATA_MCP_PORT=9000

TECHNICAL_ANALYSIS_MCP_HOST=localhost
TECHNICAL_ANALYSIS_MCP_PORT=9001

TRADING_EXECUTION_MCP_HOST=localhost
TRADING_EXECUTION_MCP_PORT=9002

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format: json, text
LOG_FORMAT=json

# Log file path (optional, logs to console if not set)
LOG_FILE_PATH=

# Enable structured logging with correlation IDs
ENABLE_CORRELATION_IDS=true

# Enable audit logging
ENABLE_AUDIT_LOGGING=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================

# Initial portfolio cash balance (simulation)
INITIAL_CASH_BALANCE=100000.0

# Risk management parameters
MAX_POSITION_SIZE_PERCENT=10.0
MAX_SECTOR_CONCENTRATION_PERCENT=30.0
MIN_CASH_RESERVE_PERCENT=20.0
MAX_SINGLE_TRADE_VALUE=10000.0

# Trading simulation settings
ENABLE_PAPER_TRADING=true
SIMULATE_MARKET_DELAYS=true
MARKET_DELAY_MIN_MS=100
MARKET_DELAY_MAX_MS=500

# =============================================================================
# PERFORMANCE AND MONITORING
# =============================================================================

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_SECONDS=30

# Enable metrics collection
ENABLE_METRICS_COLLECTION=true
METRICS_PORT=9090

# Circuit breaker settings
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30
CIRCUIT_BREAKER_EXPECTED_EXCEPTION=httpx.RequestError

# =============================================================================
# HTTP CLIENT CONFIGURATION
# =============================================================================

# Request timeouts (seconds)
HTTP_CONNECT_TIMEOUT=10.0
HTTP_READ_TIMEOUT=30.0
HTTP_WRITE_TIMEOUT=10.0
HTTP_POOL_TIMEOUT=10.0

# Retry configuration
HTTP_MAX_RETRIES=3
HTTP_RETRY_BACKOFF_FACTOR=1.5
HTTP_RETRY_STATUS_CODES=500,502,503,504

# Connection pooling
HTTP_MAX_CONNECTIONS=100
HTTP_MAX_KEEPALIVE_CONNECTIONS=20

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Environment: development, testing, production
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# Enable API documentation
ENABLE_API_DOCS=true

# Test configuration
TEST_TIMEOUT_SECONDS=60
TEST_MAX_CONCURRENT_REQUESTS=5

# Mock external services in testing
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# API key for external services (if needed)
API_KEY=

# Enable CORS for web interface
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# =============================================================================
# DATA STORAGE
# =============================================================================

# Data directory for logs and temporary files
DATA_DIR=./data

# Cache configuration
ENABLE_CACHING=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Market data provider settings (for future real data integration)
MARKET_DATA_PROVIDER=simulation
MARKET_DATA_API_KEY=
MARKET_DATA_BASE_URL=

# News data provider settings
NEWS_DATA_PROVIDER=simulation
NEWS_API_KEY=
NEWS_BASE_URL=

# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Worker process configuration
WORKER_PROCESSES=1
WORKER_THREADS=4

# Memory limits
MAX_MEMORY_MB=1024

# Enable profiling
ENABLE_PROFILING=false
PROFILING_OUTPUT_DIR=./profiling

# Custom configuration file path
CUSTOM_CONFIG_PATH=